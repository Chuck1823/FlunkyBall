<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    tools:context=".Menu">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title"
        android:textSize="40sp"
        android:textStyle="bold"
        android:textColor="@color/titleColor"
        android:layout_centerHorizontal="true"
        android:paddingTop="60sp"
        android:paddingBottom="60sp" />

    <Button
        android:id="@+id/lets_flunk_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lets_flunk_button"
        android:textSize="30sp"
        android:textColor="@color/white"
        android:background="@color/buttonBackgroundColor"
        android:layout_below="@+id/title"
        android:layout_centerHorizontal="true"
        android:paddingTop="20sp"
        android:paddingBottom="20sp"
        android:layout_marginBottom="40sp"/>

    <Button
        android:id="@+id/how_to_flunk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/how_to_flunk_button"
        android:textSize="30sp"
        android:textColor="@color/white"
        android:background="@color/buttonBackgroundColor"
        android:layout_below="@+id/lets_flunk_button"
        android:layout_centerHorizontal="true"
        android:paddingTop="20sp"
        android:paddingBottom="20sp"
        android:layout_marginBottom="40sp"/>

</RelativeLayout>